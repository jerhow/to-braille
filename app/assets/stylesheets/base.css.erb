body {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 16px;
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    background-color: #dbe2ef;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

a:link {
    color: blue;
    text-decoration: none;
}

a:visited {
    color: blue;
}

a:hover {
    color: red;
    text-decoration: underline;
}

a:active {
    color: blue;
}

.break {
  display: block;
}

#outer_container {
    margin-top: 60px;
    margin-bottom: 55px;
    margin-left: 5px;
    margin-right: 5px;
}

#header_flexbox {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    background-color: #3f72af;
}

#logo-text-container {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    margin-top: 5px;
    margin-bottom: 5px;
    margin-left: 5px;
}

#masthead-title {
    color: #f9f7f7;
    font-size: 1.3rem;
    font-weight: bold;
    /*margin-bottom: 5px;*/
}

#masthead-tagline {
    color: #f9f7f7;
}

#masthead-container {
    /*margin-left: 10px;*/
    text-align: left;
}

#footer {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    text-align: center;
    border-top: 1px solid black;
    overflow: hidden;
    background-color: #112d4e;
    padding-top: 5px;
    padding-bottom: 5px;
}

.footer_cell {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-evenly;
    align-items: center;
}

#copyright {
    font-size: .8rem;
    font-weight: bold;
    color: #f9f7f7;
}

#copyright a {
    color: #f9f7f7;
    text-decoration: none;
}

#homepage-blurb {
  color: #000000;
}

@media screen and (min-width: 768px) {

  #homepage-blurb {
    width: 600px;
  }

  #translation {
    font-size: 2.5rem;
    width: 700px;
    height: 150px;
  }

  #user_input {
    font-size: 1.2rem;
    width: 700px;
    height: 150px;
  }
}

@media screen and (min-width: 275px) and (max-width: 767px) {

  #homepage-blurb {
    width: 90%;
  }

  #translation {
    font-size: 2.5rem;
    width: 90%;
    height: 150px;
  }

  #user_input {
    font-size: 1.2rem;
    width: 90%;
    height: 150px;
  }
}
