body {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 16px;
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.break {
  display: block;
}

@media screen and (min-width: 768px) {

    #translation {
      font-size: 2.5rem;
      width: 700px;
      height: 150px;
    }

    #user_input {
      font-size: 1.2rem;
      width: 700px;
      height: 150px;
    }
}

@media screen and (min-width: 275px) and (max-width: 767px) {

    #translation {
      font-size: 2.5rem;
      width: 90%;
      height: 150px;
    }

    #user_input {
      font-size: 1.2rem;
      width: 90%;
      height: 150px;
    }
}
